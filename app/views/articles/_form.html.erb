<div class="container">
  <div class="row justify-content-center">
    <div class="col-10 mb-3">
      <%= render 'shared/errors' %>

      <%= form_with(model: @article ,class: "shadow mb-3 p-5 bg-white rounded",local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :title, class: "col-2 col-form-label font-weight-bold" %>
          <div class="col-10">
            <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Enter the title"  %>
          </div>
        </div>
        <div class="form-group row">
              <%= f.label :description, class: "col-2 col-form-label font-weight-bold"  %>
              <div class="col-10">
                <%= f.text_area :description, rows: 8, class: "form-control shadow rounded", placeholder: "Enter description" %>
              </div>
        </div>

          <div class="form-group row justify-content-center"> 
            <%= f.submit class: "btn btn-outline-success" %>
          </div>

          <div class="row justify-content-center">
            <%= link_to '[ Cancel and return to articles listing ]', articles_path %>
          </div>
      <% end %>
    </div>
  </div>
</div>